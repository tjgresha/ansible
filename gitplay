---
 - name: "Playing with Ansible and Git"
   hosts: localhost
   connection: local
   tasks:

    - name: 'Just ensuring the repo checkout exists'
      ansible.builtin.git:
        repo: git@github.com:dci-labs/intel-oregon-lab-config.git
        dest: checkout
        key_file: /home/tjgresha/.ssh/id_rsa
        accept_hostkey: yes
        force: yes
       
